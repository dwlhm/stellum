{
  "name": "stellum",
  "version": "0.1.0",
  "description": "A lightweight router for React with SSR support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "router",
    "ssr",
    "routing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/stellum"
  },
  "devDependencies": {
    "@types/node": "^22.15.19",
    "@types/react": "^19.1.4",
    "tsup": "^8.5.0"
  }
}
